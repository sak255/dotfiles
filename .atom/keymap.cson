'atom-workspace atom-text-editor':
  'ctrl-y': 'core:paste'
  'ctrl-/': 'core:undo'
  'ctrl-g ctrl-/': 'core:redo'
  'ctrl-shift-a': 'core:select-all'
  'ctrl-shift-s': 'core:save'
  'ctrl-shift-z': 'core:undo'
  'ctrl-shift-x': 'core:cut'
  'ctrl-shift-c': 'core:copy'
  'ctrl-shift-v': 'core:paste'

'atom-workspace atom-text-editor:not([mini])':
  'ctrl-c ctrl-c': 'editor:toggle-line-comments'
  'alt-%': 'find-and-replace:show'

'atom-workspace .find-and-replace':
  'alt-%': 'find-and-replace:show-replace'
